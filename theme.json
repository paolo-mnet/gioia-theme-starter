{
  "$schema": "http://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "border": {
      "color": false,
      "radius": false,
      "style": false,
      "width": false
    },
    "color": {
      "text": true,
      "background": true,
      "link": false,
      "custom": true,
      "customDuotone": false,
      "customGradient": true,
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "duotone": [],
      "palette": [
        {
          "slug": "primary",
          "color": "#e94e1c",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#29235c",
          "name": "Secondary"
        },
        {
          "slug": "alt",
          "color": "#777777",
          "name": "Alternative"
        },
        {
          "slug": "light",
          "color": "#f1f1f1",
          "name": "Light gray"
        },
        {
          "slug": "border",
          "color": "#d1d1d1",
          "name": "Dark gray"
        },
        {
          "slug": "black",
          "color": "#232323",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        }
      ],
      "gradients": [
        {
          "slug": "shaded-black",
          "gradient": "linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.7) 30%, rgba(0,0,0,0.95) 60%, rgba(0,0,0,1) 100%)",
          "name": "Nero sfumato"
        },
        {
          "slug": "shaded-white",
          "gradient": "linear-gradient(180deg, var(--wp--preset--color--light) 0%, var(--wp--preset--color--white) 100%)",
          "name": "Shaded white"
        }
      ]
    },
    "layout": {
      "contentSize": "1110px",
      "wideSize": "1440px"
    },
    "spacing": {
      "blockGap": null,
      "margin": false,
      "padding": false,
      "units": [
        "px",
        "rem",
        "%"
      ],
      "spacingScale": {
        "steps": 6,
        "unit": "px",
        "operator": "+",
        "increment": 15,
        "mediumStep": 15
      }
    },
    "typography": {
      "dropCap": false,
      "lineHeight": false,
      "letterSpacing": false,
      "customFontSize": true,
      "fontWeight": false,
      "fontSizes": [
        {
          "size": "13px",
          "slug": "small",
          "name": "Small"
        },
        {
          "size": "16px",
          "slug": "regular",
          "name": "Regular"
        },
        {
          "size": "18px",
          "slug": "medium",
          "name": "Medium"
        },
        {
          "size": "20px",
          "slug": "large",
          "name": "Large"
        },
        {
          "size": "24px",
          "slug": "x-large",
          "name": "Extra large"
        },
        {
          "size": "32px",
          "slug": "o-large",
          "name": "Over large"
        },
        {
          "size": "48px",
          "slug": "huge",
          "name": "Huge"
        },
        {
          "size": "clamp(52px, 5vw, 64px)",
          "slug": "gigantic",
          "name": "Gigantic"
        }
      ],
      "fontFamilies": [
        {
          "name": "System",
          "slug": "system",
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
        },
        {
          "name": "Regular",
          "slug": "regular",
          "fontFamily": "\"Roboto\",sans-serif"
        },
        {
          "name": "Headings",
          "slug": "headings",
          "fontFamily": "\"Poppins\",sans-serif"
        }
      ]
    },
    "custom": {
      "gutter": "15px",
      "button": {
        "border-radius": "2px",
        "padding-vertical": "16px",
        "padding-horizontal": "32px"
      }
    },
    "blocks": {
      "core/group": {
        "spacing": {
          "padding": true
        },
        "typography": {
          "textTransform": false,
          "letterSpacing": false,
          "lineHeight": false,
          "fontFamilies": [],
          "fontSizes": []
        }
      },
      "core/columns": {
        "typography": {
          "textTransform": false,
          "letterSpacing": false,
          "lineHeight": false,
          "fontFamilies": [],
          "fontSizes": []
        }
      },
      "core/button": {
        "typography": {
          "textTransform": false,
          "letterSpacing": false,
          "lineHeight": false,
          "fontFamilies": [],
          "fontSizes": []
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--black)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--regular)",
      "fontSize": "var(--wp--preset--font-size--regular)",
      "lineHeight": "1.5"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary-light)"
          }
        },
        ":active": {
          "color": {
            "text": "var(--wp--preset--color--primary-dark)"
          }
        }
      },
      "heading": {
        "typography": {
          "fontWeight": "400",
          "fontFamily": "var(--wp--preset--font-family--headings)"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--gigantic)",
          "lineHeight": "1.1"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--huge)",
          "lineHeight": "1.15"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--o-large)",
          "lineHeight": "1.2"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "1.3"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "1.4"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "lineHeight": "1.5"
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--black)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-light)",
            "text": "var(--wp--preset--color--black)"
          }
        },
        ":active": {
          "color": {
            "background": "var(--wp--preset--color--primary-dark)",
            "text": "var(--wp--preset--color--black)"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--regular)",
          "fontWeight": "700",
          "lineHeight": "1.5"
        },
        "border": {
          "radius": "var(--wp--custom--button--border-radius)"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--custom--button--padding-vertical)",
            "left": "var(--wp--custom--button--padding-horizontal)",
            "right": "var(--wp--custom--button--padding-horizontal)",
            "bottom": "var(--wp--custom--button--padding-vertical)"
          }
        },
        "shadow": "4px 4px 8px 0px rgba(0,0,0,0.15)"
      }
    },
    "blocks": {
      "core/separator": {
        "border": {
          "bottom": {
            "width": "1px",
            "color": "var(--wp--preset--color--border)"
          }
        },
        "spacing": {
          "margin": {
            "top": "2.4rem",
            "bottom": "2.4rem"
          }
        }
      },
      "core/group": {
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--70)",
            "bottom": "var(--wp--preset--spacing--70)"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header (default)",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer (default)",
      "area": "footer"
    },
    {
      "name": "sidebar",
      "title": "Sidebar",
      "area": "uncategorized"
    }
  ],
  "customTemplates": [
    {
      "name": "template-sidebar",
      "title": "Template Sidebar",
      "postTypes": [
        "post",
        "page"
      ]
    }
  ]
}
