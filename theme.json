{
  "$schema": "http://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
			"link": false,
			"text": true,
      "custom": true,
      "background": true,
      "customDuotone": false,
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        {
          "slug": "primary",
          "color": "#e94e1c",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#29235c",
          "name": "Secondary"
        },
        {
          "slug": "alt",
          "color": "#777777",
          "name": "Alternative"
        },
        {
          "slug": "light",
          "color": "#f2f2f2",
          "name": "Light"
        },
        {
          "slug": "border",
          "color": "#c5c5c5",
          "name": "Border"
        },
        {
          "slug": "black",
          "color": "#222222",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        }
      ],
      "gradients": [
        {
          "slug": "light-white",
          "gradient": "linear-gradient(180deg, var(--wp--preset--color--light) 0%, var(--wp--preset--color--white) 100%)",
          "name": "Light to White"
        }
      ],
      "duotone": []
    },
    "typography": {
      "dropCap": false,
      "lineHeight": false,
      "letterSpacing": false,
      "customFontSize": true,
      "fontWeight": false,
      "fontFamilies": [
        {
          "name": "System",
          "slug": "system",
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
        },
        {
          "name": "Regular",
          "slug": "regular",
          "fontFamily": "\"Roboto\",sans-serif"
        },
        {
          "name": "Headings",
          "slug": "headings",
          "fontFamily": "\"Poppins\",sans-serif"
        }
      ],
      "fontSizes": [
        {
          "size": "13px",
          "slug": "small",
          "name": "Small"
        },
        {
          "size": "16px",
          "slug": "regular",
          "name": "Regular"
        },
        {
          "size": "18px",
          "slug": "medium",
          "name": "Medium"
        },
        {
          "size": "20px",
          "slug": "large",
          "name": "Large"
        },
        {
          "size": "24px",
          "slug": "x-large",
          "name": "Extra Large"
        },
        {
          "size": "30px",
          "slug": "o-large",
          "name": "Over Large"
        },
        {
          "size": "34px",
          "slug": "huge",
          "name": "Huge"
        },
        {
          "size": "clamp(34px, 5vw, 64px)",
          "slug": "gigantic",
          "name": "Gigantic"
        }
      ]
    },
    "layout": {
      "contentSize": "1140px",
      "wideSize": "1440px"
    },
    "border": {
      "radius": true
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "units": ["px", "rem", "%"]
    },
    "custom": {
      "gutter": "15px",
      "spacing": "30px",
      "button-border-radius": "2px",
      "button-padding-vertical": "8px",
      "button-padding-horizontal": "24px"
    }
  },
  "styles": {
    "spacing": {
      "blockGap": "var(--wp--custom--spacing)"
    },
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--regular)",
      "fontSize": "var(--wp--preset--font-size--regular)",
      "lineHeight": "1.5"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--huge)",
          "lineHeight": "1.15"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--o-large)",
          "lineHeight": "1.15"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "1.2"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "1.3"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "lineHeight": "1.4"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--regular)",
          "lineHeight": "1.5"
        }
      }
    },
    "blocks": {
      "core/heading": {
        "color": {
          "text": "var(--wp--preset--color--black)"
        }
      },
      "core/button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--regular)",
          "lineHeight": "1.5"
        },
        "border": {
          "width": "1px",
          "style": "solid",
          "color": "var(--wp--preset--color--primary)",
          "radius": "var(--wp--custom--button-border-radius)"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--custom--button-padding-vertical)",
            "left": "var(--wp--custom--button-padding-horizontal)",
            "right": "var(--wp--custom--button-padding-horizontal)",
            "bottom": "var(--wp--custom--button-padding-vertical)"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header (default)",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer (default)",
      "area": "footer"
    },
    {
      "name": "sidebar",
      "title": "Sidebar",
      "area": "uncategorized"
    }
  ],
  "customTemplates": [
    {
      "name": "template-sidebar",
      "title": "Template Sidebar",
      "postTypes": ["post", "page"]
    }
  ]
}
